<h2><%= @task.title %></h2>
<h4>Details: <%= @task.details %></h4>
<p>Done? <%= @task.completed %></p>

<p><%= link_to "Back to tasks", tasks_path(@task)%></p>
<p><%= link_to "Edit Task", edit_task_path(@task)%></p>
<%= link_to "Delete", task_path(@task),
method: :delete,
data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
